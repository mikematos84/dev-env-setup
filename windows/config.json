{
  "buckets": [
    "extras"
  ],
  "dependencies": [
    {
      "name": "git-with-openssh",
      "description": "Git with OpenSSH support",
      "required": true
    },
    {
      "name": "sudo",
      "description": "Elevated privileges utility",
      "required": false
    }
  ],
  "devDependencies": [
    {
      "name": "nvm",
      "description": "Node Version Manager",
      "required": true,
      "postInstall": "nvm install lts; nvm use lts"
    },
    {
      "name": "mkcert",
      "description": "Local development certificates",
      "required": false
    },
    {
      "name": "yarn",
      "description": "Node.js dependency manager",
      "required": false
    },
    {
      "name": "vscode",
      "description": "Visual Studio Code editor",
      "required": false
    },
    {
      "name": "zed",
      "description": "Zed code editor",
      "required": false
    },
    {
      "name": "cursor",
      "description": "Cursor AI-powered code editor",
      "required": false
    }
  ],
  "system": {
    "sshAgent": {
      "enabled": true,
      "autoStart": true
    },
    "git": {
      "configureSSH": true
    }
  }
}

